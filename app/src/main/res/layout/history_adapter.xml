<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cvHistoryAdapter"
    card_view:cardCornerRadius="20dp"
    card_view:cardBackgroundColor="@color/cyanA400"
    app:layout_constraintTop_toBottomOf="@id/linearLayoutBtn"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    >
    <LinearLayout
        android:id="@+id/linearLayoutCVHistoryAdapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/percentageHistoryAdapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="87%"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:id="@+id/linearLayoutTextCVHistoryAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/textDateHistoryAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="0.5"
                android:text="Tanggal Diagnosa"
                android:textColor="@color/black"
                android:fontFamily="@font/typo_graphica"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:id="@+id/textTimeHistoryAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="0.5"
                android:text="Jam Diagnosa"
                android:textColor="@color/black"
                android:fontFamily="@font/typo_graphica"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"

                />
            <TextView
                android:id="@+id/textDiagnoseHistoryAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_weight="1"
                android:text="Penyakit"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/typo_graphica"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>