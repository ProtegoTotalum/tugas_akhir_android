<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cvPertanyaanDetailHistory"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/gray300"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/linearLayoutPertanyaanDetailHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/namaGejalaPertanyaanDetailHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Gejala"
            android:textColor="@color/teal1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/jawabanPertanyaanDetailHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jawaban User"
            android:textColor="@color/teal2"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>



