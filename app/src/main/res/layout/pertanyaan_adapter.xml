<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cvPertanyaanDetailHistory"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/white"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/linearLayoutPertanyaan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/txtNamaGejalaPertanyaanAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Gejala"
            android:textColor="@color/teal2"
            android:textSize="21sp"
            android:layout_marginTop="10dp"
            />
        <RadioGroup
            android:id="@+id/radioGroupPertanyaan"
            android:checkedButton="@+id/radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton
                android:id="@+id/regRadioSangatYakin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sangat Yakin"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>
            <RadioButton
                android:id="@+id/regRadioYakin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Yakin"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>
            <RadioButton
                android:id="@+id/regRadioCukupYakin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cukup Yakin"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>
            <RadioButton
                android:id="@+id/regRadioSedikitYakin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sedikit Yakin"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>
            <RadioButton
                android:id="@+id/regRadioTidakYakin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tidak Yakin"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>
            <RadioButton
                android:id="@+id/regRadioTidakMerasakan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Tidak Merasakan Sama Sekali"
                android:textColor="@color/teal3"
                android:buttonTint="@color/teal1"/>

        </RadioGroup>

    </LinearLayout>
</androidx.cardview.widget.CardView>