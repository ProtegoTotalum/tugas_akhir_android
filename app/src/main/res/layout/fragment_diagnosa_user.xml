<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragment.FragmentDiagnosaUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButtonDiagnosaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:text="@string/back"
                android:textColor="@color/teal1"
                app:iconTint="@color/teal1"
                app:iconPadding="0dp"
                android:paddingStart="8dp"
                app:icon="@drawable/ic_arrow_back_24"
                tools:ignore="RtlSymmetry" />


            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/stomadical_logo"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/junegull_rg"
            android:text="Diagnosa Penyakit Lambung"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="24sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/imageLambung"
            app:layout_constraintTop_toBottomOf="@+id/topLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageLambung"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/lambung_logo"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textGerd"
            />
        <TextView
            android:id="@+id/textGerd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_round_bold_italic"
            android:text="GERD"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/imageLambung"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textGastritis"
            />
        <TextView
            android:id="@+id/textGastritis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_round_bold_italic"
            android:text="Gastritis"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textGerd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textGastroenteritis"
            />
        <TextView
            android:id="@+id/textGastroenteritis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_round_bold_italic"
            android:text="Gastroenteritis"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textGastritis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textGastroparesis"
            />

        <TextView
            android:id="@+id/textGastroparesis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_round_bold_italic"
            android:text="Gastroparesis"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textGastroenteritis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textTukakLambung"
            />

        <TextView
            android:id="@+id/textTukakLambung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/typo_round_bold_italic"
            android:text="Tukak Lambung"
            android:textStyle="bold"
            android:textColor="@color/teal1"
            android:letterSpacing="0.05"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textGastroparesis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/btnMulaiDiagnosa"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/junegull_rg"
            android:text="Mulai"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/textTukakLambung"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>